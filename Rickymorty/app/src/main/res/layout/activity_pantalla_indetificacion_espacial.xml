<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_espacio"
    tools:context=".pantalla_indetificacion_espacial">

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingTop="40dp"
        android:paddingBottom="12dp"
        android:text="IDENTIFICACIÓN ESPACIAL"
        android:textColor="#00BCD4"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_principal"
        android:layout_width="322dp"
        android:layout_height="489dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="#804CAF50"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_volver_catalogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_titulo">

        <ScrollView
            android:layout_width="334dp"
            android:layout_height="498dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_marginBottom="28dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="#1B5E20"
                    app:strokeWidth="4dp">

                    <ImageView
                        android:id="@+id/iv_personaje_foto"
                        android:layout_width="312dp"
                        android:layout_height="182dp"
                        android:layout_gravity="center"
                        android:contentDescription="Foto del personaje"
                        android:padding="12dp"
                        android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tv_especie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESPECIE:"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ESTADO:"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_locacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOCACIÓN:"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ultima"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ULTIMA APARICIÓN:"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btn_volver_catalogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="44dp"
        android:text="VOLVER AL CATÁLOGO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#27D2F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>